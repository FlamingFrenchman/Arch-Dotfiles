#
# .screenrc
# 

# options
startup_message off
defscrollback 10000
altscreen on

# binds
# prefix
# ctrl-j is interpreted as a carriage return (\r, 0x0d); emacs uses this
# for something but it seemed very specific and unimportant
escape ^jJ

# vi-keys
bind h focus left
bind j focus down
bind k focus up
bind l focus right
bind ^h focus left
bind ^j focus down
bind ^k focus up
bind ^l focus right

# other stuff
bind x
bind ^x
bind ^| split -v
bind \\ split -v
bind o focus
bind ^i other
bind - split
bind K kill
bind Q quit
