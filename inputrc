# virgin mode
set editing-mode vi

$include /etc/inputrc

# clear screen in vi mode
"\C-l": clear-screen

# tab complete slash on symlinked directories
set mark-symlinked-directories on

# Color files by types
set colored-stats on
# display common prefix in completion menu before cycling through options
set menu-complete-display-prefix on
# Color the common prefix
set colored-completion-prefix on

# stop ^C from echoing after Ctrl+C is pressed
set echo-control-characters off

# use the mode prompt to indicate whether or not you're in vi insert mode
set show-mode-in-prompt on
$if term=linux
set vi-ins-mode-string "\1\e[?0c\2"
set vi-cmd-mode-string "\1\e[?8c\2"
$else
$if term=xterm
set vi-ins-mode-string "\1\e[3 q\2"
set vi-cmd-mode-string "\1\e[1 q\2"
$else
$if term=tmux
set vi-ins-mode-string "\1\e[3 q\2"
set vi-cmd-mode-string "\1\e[1 q\2"
$else
set vi-ins-mode-string "(INS)"
set vi-cmd-mode-string "(CMD)"
$endif
$endif
$endif

$if Bash
# m a g i c
space: magic-space
$endif
