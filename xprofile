#!/bin/sh

xrandr --auto
xset r rate 200 50
setxkbmap -model pc104 -layout us -variant dvp -option \
    ctrl:swapcaps -option terminate:ctrl-alt-backspace
if which picom &>/dev/null; then
    picom --daemon --use-damage --detect-client-leader --detect-transient
elif which compton &>/dev/null; then
    compton --daemon
fi
which redshift && redshift -P -b 0.8 -O 5500
