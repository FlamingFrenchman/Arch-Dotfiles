#!/bin/sh

xrandr --auto
xset r rate 200 50
setxkbmap -layout us -model pc104 -variant dvp -option \
    ctrl:swapcaps -option terminate:ctrl-alt-backspace
# no complaints from systems I don't control
which picom && picom --daemon --use-damage --detect-client-leader --detect-transient
which redshift && redshift -P -b 0.8 -O 5500
