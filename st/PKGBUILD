pkgname=st
pkgver=0.8.2
pkgrel=10
pkgdesc='A simple virtual terminal emulator for X.'
arch=('i686' 'x86_64' 'armv7h')
license=('MIT')
depends=(libxft)
url=https://st.suckless.org
source=("https://dl.suckless.org/$pkgname/$pkgname-$pkgver.tar.gz"
        "terminfo.patch"
        "README.terminfo.rst"
        "st-blink.diff"
        "$url/patches/boxdraw/st-boxdraw_v2-0.8.2.diff"
        "$url/patches/alpha/st-alpha-$pkgver.diff"
        "$url/patches/anysize/st-anysize-0.8.1.diff"
        "$url/patches/bold-is-not-bright/st-bold-is-not-bright-20190127-3be4cf1.diff"
        "$url/patches/xresources/st-xresources-20180309-c5ba9c0.diff"
)
sha256sums=('aeb74e10aa11ed364e1bcc635a81a523119093e63befd2f231f8b0705b15bf35'
            'bf6c8b73a606a8e513c7919d91f93ed7aeb5f44e80269bb244cc01659145a5ea'
            '0ebcbba881832adf9c98ce9fe7667c851d3cc3345077cb8ebe32702698665be2'
            '74a698a91dfaf765fdfc2a135c1b184caf87e276aab7569232541b6ca48685e3'
            'c1b7ab7672815b73e8328ecc55300c12fddce9ecae4ab04ff4377bd9132089f6'
            '9c5b4b4f23de80de78ca5ec3739dc6ce5e7f72666186cf4a9c6b614ac90fb285'
            '8118dbc50d2fe07ae10958c65366476d5992684a87a431f7ee772e27d5dee50f'
            '329169acac7ceaf901995d6e0897913089b799d8cd150c7f04c902f4a5b8eab2'
            'cd584a1b0fab0acf0605372e7076de103b39a39c2ad13d593b4413a79199ece1'
)
_sourcedir=$pkgname-$pkgver
_makeopts="--directory=$_sourcedir"


prepare() {
  echo "Applying terminfo patch"
  patch --merge --directory="$_sourcedir" --strip=0 < terminfo.patch
  echo "Applying blink patch"
  patch --merge --directory="$_sourcedir" --strip=1 < st-blink.diff
  echo "Applying boxdraw patch"
  patch --merge --directory="$_sourcedir" --strip=1 < st-boxdraw_v2-$pkgver.diff
  echo "Applying anysize patch"
  patch --merge --directory="$_sourcedir" --strip=1 < st-anysize-0.8.1.diff
  echo "Applying bold-is-not-bright patch"
  patch --merge --directory="$_sourcedir" --strip=1 < st-bold-is-not-bright-20190127-3be4cf1.diff
  echo "Applying xresources patch"
  patch --merge --directory="$_sourcedir" --strip=1 < st-xresources-20180309-c5ba9c0.diff || true
  echo "Applying alpha patch"
  patch --merge --directory="$_sourcedir" --strip=1 < st-alpha-$pkgver.diff || true
  
  msg=""
  msg+="This package can be configured in config.h.\n"
  msg+="Copy the config.def.h that was just placed into the package\n"
  msg+="directory to config.h and modify it to change the configuration.\n"
  msg+="Or just leave it alone to continue to use default values.\n"
  msg+="\n"
  msg+="Because patches for this program tend not to play nicely, I have\n"
  msg+="decided to have the prepare() function always fail. Please check\n"
  msg+="the output of the patch commands above to make sure nothing is\n"
  msg+="amiss. If there is, just manually resolve the merge conflicts in\n"
  msg+="the source directory. Once you have done this, all you need to do\n"
  msg+="is run makepkg with the -e flag. Your config.h will be copied\n"
  msg+="into the source directory automatically, if it exists."
  warning "$msg"

  cp "$_sourcedir/config.def.h" "$BUILDDIR"
  if [ -e "$BUILDDIR/config.h" ]; then
      cp "BUILDDIR/config.h" "$_sourcedir"
  elif [ -e "$BUILDDIR/config.h.patch" ]; then
      cp "$_sourcedir/config.def.h" "$BUILDDIR/config.h"
      patch "$BUILDDIR/config.h" < "$BUILDDIR/config.h.patch"
      cp "$BUILDDIR/config.h" "$_sourcedir"
  fi
  exit 1
}

build() {
  make $_makeopts X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  local installopts='--mode 0644 -D --target-directory'
  local shrdir="$pkgdir/usr/share"
  local licdir="$shrdir/licenses/$pkgname"
  local docdir="$shrdir/doc/$pkgname"
  make $_makeopts PREFIX=/usr DESTDIR="$pkgdir" install
  install $installopts "$licdir" "$_sourcedir/LICENSE"
  install $installopts "$docdir" "$_sourcedir/README"
  install $installopts "$docdir" README.terminfo.rst
  install $installopts "$shrdir/$pkgname" "$_sourcedir/st.info"
}
