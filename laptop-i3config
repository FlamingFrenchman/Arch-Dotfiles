# make switching workspaces less awful on programmer dvorak
# order from 0 to 9 is: *()}+{][!=
bindsym $sup+parenleft      exec $goto_workspace $ws1
bindsym $sup+parenright     exec $goto_workspace $ws2
bindsym $sup+braceright     exec $goto_workspace $ws3
bindsym $sup+plus           exec $goto_workspace $ws4
bindsym $sup+braceleft      exec $goto_workspace $ws5
bindsym $sup+bracketright   exec $goto_workspace $ws6
bindsym $sup+bracketleft    exec $goto_workspace $ws7
bindsym $sup+exclam         exec $goto_workspace $ws8
bindsym $sup+equal          exec $goto_workspace $ws9
bindsym $sup+asterisk       exec $goto_workspace $ws10
                            
